<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding:0px">
    <div class="navbar navbar-expand-sm navbar-dark navbar-fixed-top bg-dark  d-flex justify-content-between" style="margin-bottom:30px">
        <div class="container">
            <div class="navbar-header" style="display:flex;>
                @if (Session["UserName"] == null)
                {
                    <div style="margin:9px 0 0 100px">
                        @Html.ActionLink("Login", "Login", "Authentication", new { area = "" }, new { @class = "btn btn-primary", @style = "height: 40px ; " })

                    </div>
                }
                else
                {
                    <div style="margin:9px 0 0 100px">

                        @Html.ActionLink("Logout", "Logout", "Authentication", new { area = "" }, new { @class = "btn btn-primary", @style = "height: 40px ; " })
                    </div>
                    <li class="nav-item"></li>
                }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
